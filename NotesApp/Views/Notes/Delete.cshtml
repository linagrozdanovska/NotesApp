@model NotesApp.Models.Note

@{
    ViewData["Title"] = "Delete";
}

@section Styles
{
    <style type="text/css">
        body {
            background: #f5f5f5;
        }


        #content {
            background: #fff;
            display: block;
            padding: 1em;
            box-shadow: 5px 5px 7px rgba(33,33,33,.1);
            transition: transform .15s linear;
        }

        #content {
            border-radius: 5px;
        }

            #content #body {
                font-size: 1em;
                overflow: hidden;
                position: relative;
            }

        #title {
            text-decoration: none;
            color: black;
        }
    </style>
}

<div class="row mb-4">
    <div class="col-12 text-left">
        <a asp-action="Index"><h5><i class="fas fa-arrow-left"></i> Back</h5></a>
    </div>
</div>

<div class="row mb-3">
    <div class="col-12 text-center">
        <h3>Are you sure you want to delete this note?</h3>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="btn btn-secondary" style="width: 6rem">No</a>
            <input type="submit" value="Yes" class="btn btn-danger" style="width: 6rem" />
        </form>
    </div>
</div>

<div id="content" class="w-50 mx-auto">
    <p class="text-muted">@Model.Date</p>
    <h4><a asp-action="Details" asp-route-id="@Model.Id" id="title">@Model.Title</a></h4>
    <p id="body">@Model.Body</p>
</div>
