@model NotesApp.Models.Note

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles
{
    <style type="text/css">
        body {
            background: #f5f5f5;
        }

        #content {
            background: #fff;
            display: block;
            padding: 1em;
            box-shadow: 5px 5px 7px rgba(33,33,33,.1);
            transition: transform .15s linear;
        }

        #content {
            border-radius: 5px;
        }
    </style>
}

<div class="row mb-4">
    <div class="col-12 text-left">
        <a asp-action="Index"><h5><i class="fas fa-arrow-left"></i> Back</h5></a>
    </div>
</div>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div id="content" class="w-50 mx-auto">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Body" class="control-label"></label>
            <textarea asp-for="Body" class="form-control" rows="5" cols="10"></textarea>
            <span asp-validation-for="Body" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group text-center mt-4">
        <input type="submit" value="Save" class="btn btn-primary" style="width: 6rem"/>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
